{
  "name": "aloskill-backend",
  "version": "1.0.0",
  "description": "Aloskill Learning Management System",
  "main": "src/server.ts",
  "author": "Sumaiya Ahmed",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint:check": "eslint --ext .js,.ts src",
    "lint:fix": "eslint --ext .js,.ts src --fix",
    "prettier:check": "prettier --check \"src/**/*.{ts,js,json,css}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,js,json,css}\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db": "run-p db:generate db:push",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security": "run-p security:*",
    "logs:clear": "rimraf logs/*.log",
    "check-lint-prettier": "run-p lint:check prettier:check",
    "check-all": "run-p typecheck lint:check prettier:check security:audit",
    "format-all": "run-p lint:fix prettier:fix"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "ts-node-dev": "^2.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/nodemailer": "^7.0.1",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^56.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prisma": "^6.16.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit --skipLibCheck"
    ]
  }
}
